<div class="modal fade" id="delivery_article">
    <div class="modal-dialog" style="width:60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    <center>稿件填写</center>
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="article-form">
                	<div class="form-group">
                        <label class="col-sm-3 control-label"> 任务id： </label> 
                        <div class="col-sm-6">
                        	<input type="text" value="{{taskId}}" name="taskId" disabled class="form-control"  />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span class="required">*</span>发布日期： </label>
                        <div class="col-sm-6">
                            <input class="form-control  required bind bind-date layer-date" type="text" id="issueDate" name="issueDate" autocomplete="off"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span class="required">*</span>内容标题： </label>
                        <div class="col-sm-6">
                            <input class="form-control required bind" type="text" id="articleTitle" name="articleTitle" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span class="required">*</span>内容链接： </label>
                        <div class="col-sm-6">
                            <input class="form-control required bind" type="text" id="articleUrl" name="articleUrl" />
                        </div>
                    </div>
                    <div class="form-group">
                         <label class="col-sm-3 control-label"><span class="required">*</span>内容状态： </label>
                         <div class="col-sm-6">
                             <select name="articleStatus" id="article_status" class="form-control required bind" style="width: 65%;">
							</select>
                         </div> 
                     </div>
                     <div class="form-group">
                         <label class="col-sm-3 control-label">备注： </label>
                         <div class="col-sm-6">
                             <textarea name="articleRemark" id="articleRemark" class="form-control" rows="3" ></textarea>
                         </div>
                     </div>
                     
                     
					
                     <input type="hidden" id="id" name="id" value="{{effectId}}" />
                </form>
                <form  class="form-horizontal"  id="fileForm" method="post"  enctype="multipart/form-data"  name="fileForm">
                     <div class="form-group">
                         <label class="col-sm-3 control-label">平台通过截图： </label>
                         <div class="col-sm-4">
                            <!-- <input type="file" id="file" name="file"  enctype="multipart/form-data">
                              -->
                         <!-- <button type="button" class="btn btn-sm btn-info bind bind-click" bind-method="openDropzoneModal">上传图片</button>
                           --> 
                         </div>
                         
                     </div>
                </form>
                
                
             
		<div class="modal-content" id="dropzone_content">
			<input type="text" id="img_input" value="[]" style="height: 50px;width: 100%;display: none">
			<div id="imgs_show" class="dropzone dropzone-previews"></div>
			<form action="/daren-web/upload/uploadSingle" class="dropzone needsclick dz-clickable" id="deliveryArticleDropzone">
				<div class="dz-message needsclick">
					<br>在这里放下文件或点击上传
					
				</div>
			</form>
		</div>
	

				
                <ul class="imgWrapper" id="imgDeArticleWrapper"></ul>
            </div>
            <div class="modal-footer" style="margin-top:0;">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    关闭
                </button>
                <button type="button" id="submitDeliveryArticle" class="btn btn-primary bind bind-click" validate-form="article-form" tag="{{tag}}" bind-method="submitDeliveryArticle">
                    保存
                </button>
            </div>
        </div>
    </div>
</div>
